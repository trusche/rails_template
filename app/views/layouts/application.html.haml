!!!
%html
  %head
    %title RailsTemplate
    = stylesheet_link_tag    'application', media: 'all'#, 'data-turbolinks-track' => true
    = javascript_include_tag 'application'#, 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header#top.navbar.navbar-static-top
      .container
        .navbar-header
          = link_to "Rails Template", root_url, class: 'navbar-brand'

        = render "shared/login"

    .container
      = render 'shared/flash'
      = yield
