source 'https://rubygems.org'

# Core Rails and stuff 
gem 'rails'
gem 'mysql2'
gem 'haml-rails'
gem 'jquery-rails'
gem 'autoprefixer-rails'
gem 'sass-rails'
gem 'bootstrap-sass'
gem 'font-awesome-sass'
gem 'uglifier'
gem 'coffee-rails'
gem 'therubyracer',  platforms: :ruby
gem 'jbuilder'
gem 'kaminari' # pagination
gem 'ruby_dep', '1.3.1' # https://github.com/e2/ruby_dep/issues/20


# Security
gem 'bcrypt'
gem 'devise' # authentication
gem 'cancancan' # authorization

# Miscellaneous
